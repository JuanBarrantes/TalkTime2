<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.talktime">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Chat.FireBase.Activity.Registro_Fire_Base"
            android:label="@string/title_activity_registro__fire__base"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Chat.FireBase.Activity.Login_FireBase"
            android:label="@string/title_activity_login__fire_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Chat.FireBase.Activity.chats"
            android:label="@string/title_activity_chats"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Chat.FireBase.Activity.amigos"
            android:label="@string/title_activity_amigos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Chat.FireBase.Activity.inicio"
            android:label="@string/title_activity_inicio2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Inicio.perfil_2"
            android:label="@string/title_activity_perfil_2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Beans.Comunidad"
            android:label="@string/title_activity_comunidad"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Inicio.perfil_1"
            android:label="@string/title_activity_registro_2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registro"
            android:label="@string/title_activity_registro"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>